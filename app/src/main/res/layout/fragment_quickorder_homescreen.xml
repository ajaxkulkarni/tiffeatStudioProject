<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".QuickOrderMainScreen" >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

       <Button
           android:id="@+id/quickorder_homescreen_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           android:layout_weight="1"
           android:background="@drawable/orangebutton"
           android:minHeight="40dip"
           android:text="Make New Order"
           android:textColor="#fff"
           android:textSize="15sp" />

       <ImageView
           android:id="@+id/share_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="18dp"
           android:layout_weight="0.4"
           android:minHeight="20dip"
           android:src="@drawable/circle" />

   </LinearLayout>
 
    <TextView
        android:id="@+id/quickorder_homescreen_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:text="Todays orders"
        android:textColor="#90A4AE"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/quickorder_homescreen_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/quickorder_homescreen_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="4sp"
            android:transcriptMode="alwaysScroll" >
        </ListView>
    </RelativeLayout>

</LinearLayout>